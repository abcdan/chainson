{
  "name": "chainson",
  "version": "0.0.5-a",
  "description": "A JSON file-based database with a queuing system",
  "main": "index.js",
  "types": "main.d.ts",
  "scripts": {
    "prepare-for-release": "npm run fix && npm run docs",
    "test": "jest",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "docs": "npx typedoc src/",
    "fix": "npm run format && npm run lint && npm run build",
    "coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abcdan/chainson.git"
  },
  "keywords": [
    "database",
    "json",
    "easy"
  ],
  "files": [
    "lib/**/*"
  ],
  "author": "abcdan",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/abcdan/chainson/issues"
  },
  "homepage": "https://github.com/abcdan/chainson#readme",
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.2",
    "ts-node-dev": "^1.1.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.20.28",
    "typescript": "^4.1.5"
  }
}
